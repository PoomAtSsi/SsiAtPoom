<mapper namespace="noticeMapper">

	<resultMap id="noticeResult" type="notice">
		<id property="notice_no" column="notice_no" />
		<result property="notice_nickname" column="notice_nickname" />
		<result property="notice_title" column="notice_title" />
		<result property="notice_contents" column="notice_contents" />
		<result property="notice_file" column="notice_file" />
		<result property="notice_date" column="notice_date" />
		<result property="notice_visibility" column="notice_visibility" />
		<result property="notice_filepath" column="notice_filepath" />
	</resultMap>
	
	<!-- <select id="noticeList" resultMap="noticeResult">
		SELECT * FROM NOTICE
	</select> -->
	<select id="noticeList" resultMap="noticeResult" >
		<![CDATA[
		select X.notice_no,
			X.notice_nickname,
			X.notice_title,
			X.notice_contents,
			X.notice_file,
			X.notice_date,
			X.notice_visibility,
			X.notice_filepath
		from ( 
		    select A.notice_no,
				A.notice_nickname,
				A.notice_title,
				A.notice_contents,
				A.notice_file,
				A.notice_date,
				A.notice_visibility,
				A.notice_filepath
		    from (
		        select notice_no,
					notice_nickname,
					notice_title,
					notice_contents,
					notice_file,
					notice_date,
					notice_visibility,
					notice_filepath
		        from notice
		        order by NOTICE_NO) A
		    where NOTICE_NO <= #{ end }) X
		where X.NOTICE_NO >= #{ start }
		]]>
	</select>
	
	<insert id="noticeInsert" parameterType="notice">
		<![CDATA[
		insert into NOTICE (
			notice_no,
			notice_nickname,
			notice_title,
			notice_contents,
			notice_file,
			notice_date,
			notice_visibility,
			notice_filepath
		)
		values (
			NOTICE_SEQ.NEXTVAL, 
			#{notice_nickname},
			#{notice_title}, 
			#{notice_contents}, 
			default, 
			sysdate,
			default,
			#{notice_filepath}
		)
		]]>
	</insert>
	
