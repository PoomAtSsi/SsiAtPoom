	<select id="noticeTC" resultType="java.lang.Integer" >
		<![CDATA[
		select count(*) as totalCount from notice
		]]>
	</select>
	
	<select id="brandnewNotice" resultMap="noticeResult">
		<![CDATA[
		SELECT * 
		FROM (  SELECT *
